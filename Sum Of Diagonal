#include<iostream>
using namespace std;
int main()
{
    int r1,c1,r2,c2;
    cout<<"Enter number of Rows of Matrix 1:"<<endl;
    cin>>r1;
    cout<<"Enter number of Columns Matrix 1:"<<endl;
    cin>>c1;
    cout<<"Enter number of Rows Matrix 2:"<<endl;
    cin>>r2;
    cout<<"Enter number of Columns Matrix 2:"<<endl;
    cin>>c2;
    if(r1==r2&&c1==c2)
    {
     int m1[r1][c1];
     
    for(int i=0;i<r1;i++)
    {
        for(int j=0;j<c1;j++)
        {
            cout<<"Enter the Element "<<"["<<i+1<<"]"<<"["<<j+1<<"]"<<":"<<endl;
            cin>>m1[i][j];
        }
    }
    
    int m2[r2][c2];
    for(int i=0;i<r2;i++)
    {
        for(int j=0;j<c2;j++)
        {
            cout<<"Enter the Element "<<"["<<i+1<<"]"<<"["<<j+1<<"]"<<":"<<endl;
            cin>>m2[i][j];
        }
    }
    cout<<"Matrix 1"<<endl;
    for(int i=0;i<r1;i++)
    {
        for(int j=0;j<c1;j++)
        {
            cout<<" "<<m1[i][j];
            
            
        }
        cout<<" "<<endl;
    }
    cout<<"Matrix 2"<<endl;
    for(int i=0;i<r2;i++)
    {
        for(int j=0;j<c2;j++)
        {
            cout<<" "<<m2[i][j];
            
            
        }
        cout<<" "<<endl;
    }
    int sumd[r1][c1];
    for(int i=0;i<r1;i++)
    {
        for(int j=0;j<c1;j++)
        {
            if(i==j)
            sumd[i][j]=m1[i][j]+m2[i][j];
            else
            sumd[i][j]=0;
            
        }
    }
     cout<<"Sum of Diagonal"<<endl;
    for(int i=0;i<r2;i++)
    {
        for(int j=0;j<c2;j++)
        {
            cout<<" "<<sumd[i][j];
            
            
        }
        cout<<" "<<endl;
    }
    }
    else
    cout<<"Invalid Order of Matrix "<<endl;
}
